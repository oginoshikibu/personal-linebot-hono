{
  "name": "personal-linebot-hono",
  "version": "0.1.0",
  "description": "家庭用食事管理LINEボット",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js",
    "check": "biome check src scripts --write",
    "lint": "eslint --ext .ts src scripts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "biome:check": "biome check src scripts",
    "biome:format": "biome format --write src scripts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "add-user": "tsx scripts/add_user.ts",
    "delete-user": "tsx scripts/delete_user.ts",
    "list-users": "tsx scripts/list_users.ts",
    "find-user": "tsx scripts/find_user.ts",
    "setup-richmenu": "tsx scripts/setupRichMenu.ts",
    "setup-richmenu:mock": "tsx scripts/setupRichMenuWithMock.ts",
    "setup-richmenu:theme": "tsx scripts/setupRichMenuWithTheme.ts",
    "ci": "pnpm run format && pnpm run check && pnpm run lint && pnpm run test && pnpm run type-check",
    "ci:build": "pnpm run format && pnpm run check && pnpm run lint && pnpm run test && pnpm run build"
  },
  "keywords": [
    "line",
    "bot",
    "hono",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@line/bot-sdk": "^7.5.2",
    "@prisma/client": "^5.4.2",
    "canvas": "^3.1.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "hono": "^4.8.4",
    "node-cron": "^3.0.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@types/node": "^20.8.7",
    "@types/node-cron": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.51.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "msw": "^2.10.2",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "tsx": "^4.20.3",
    "typescript": "^5.2.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
